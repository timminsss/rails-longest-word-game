<h1 class="p-3">
  <% @grid.each do |letter| %>
      <span class="badge rounded-pill bg-primary"><%= letter %></span>
  <% end %>
</h1>

<form action="/score" method="post" data-turbo="false">
  <input type="text" name="word">
  <input type="submit" value="Check word">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
  <%= hidden_field_tag :current_score, @current_score%>
</form>
